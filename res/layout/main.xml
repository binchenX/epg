<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent" android:layout_height="fill_parent">

    
       <Button 
        android:layout_width= "100px"
        android:layout_height="wrap_content"
        android:id="@+id/list_bt_back"
        android:text="Back"  
        android:layout_alignParentTop="true" 
        android:layout_alignParentLeft="true"
        
        />
    
        <Button 
        android:layout_width= "100px"
        android:layout_height="wrap_content"
        android:id="@+id/bt_browseBy"
        android:text="Browse By"  
        android:layout_alignParentTop="true"         
        android:layout_toRightOf="@id/list_bt_back"
        />
        
        <Button 
        android:layout_width= "100px"
        android:layout_height="wrap_content"
        android:id="@+id/searchbutton"
        android:text="@string/search"  
        android:layout_alignParentTop="true" 
        android:layout_toRightOf="@id/bt_browseBy"
      
        />
        
         <TextView 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/hint"
    	android:text="@string/hint"  
    	android:layout_alignParentTop="true" 	
    	android:layout_marginLeft="10px" 
        android:layout_toRightOf="@id/searchbutton"
     
        />
        
      
        <TextView 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/startDateDisplay"
    	android:text=""  	
    	android:layout_marginLeft="10px" 
    	android:layout_alignBottom="@id/searchbutton"
        android:layout_toRightOf="@id/searchbutton"
     
        />
        
        <TextView 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/endDateDisplay"
    	android:text=""  	
    	android:layout_marginLeft="20px"
        android:layout_toRightOf="@id/startDateDisplay"
        android:layout_alignBottom="@id/startDateDisplay"
     
        />
        
        
     
        

        
     <ListView android:layout_width="fill_parent"
        android:layout_height="fill_parent" android:id="@id/android:list"
        android:layout_below="@id/searchbutton"
       
        />
        
      
        
</RelativeLayout>
